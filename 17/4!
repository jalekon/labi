using namespace std;
#include <iostream>
#include <cmath>

int main()
{
	setlocale(LC_ALL, "Russian");
	double x,y,max;
	int i,z,k,n;
	cout << "Введите N и точки x, y лежащие во 2 четверти" << endl;
	cin >>n >> x>> y;
	int* a = new int[n];
	int* b = new int[n];
	z = 1;
	for (i = 1; i <= n; i++) {
		cout << x << y << endl;
		if ((x < 0) & (y > 0)){
			a[i] = (pow(x, 2) + pow(y, 2));
		b[z] = x;
		b[z + 1] = y;
		z += 2;
	}
		else
			cout << "эти координаты не лежат во 2 четверти"<<endl;
		}
	max = 0;
	for (i = 1; i <= n; i++) 
		if (a[i] > max) {
			max = a[i];
			k = i;
		}
		else
			cout << "0";
		cout << "x= " << b[k * 2 - 1] << " y= " << b[k * 2] << "расстояние = " << max;
}
