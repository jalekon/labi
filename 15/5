using namespace std;
#include <iostream>
#include <cmath>

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, i, k,max, min,x,y;
	cout << "Введите N и массив" << endl;
	cin >> n;
	int* a = new int[n];
	int* b = new int[n];
	for (i = 1; i <= n; i++) {
		cout << i << "-й элемент массива= " << endl;
		cin >> a[i];
	}
	x = a[1];
	for (i = 1; i <= n; i++) {
		if ((a[i] < x)& (x< a[i+1])) {
			for (k = 1; k < i; k++)
				a[k] = a[k + 1];
			a[i] = x;
		}
	}
		for (i = 1; i <= n; i++)
			cout << a[i] << "|";
}
