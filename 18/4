#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int m, i, j, n, min, x;
	double s;
	cout << "Введите порядок матрицы M*N: " << endl;
	cin >> m >> n;
	cout << "Заполните матрицу: " << endl;
	int** a = new int* [n];
	for (i = 1; i <= n; i++)
		a[i] = new int[m];
	for (i = 1; i <= n; i++)
		for (j = 1; j <= m; j++)
			cin >> a[i][j];
	s = 1;
	x = 0;
	for (i = 1; i <= n; i++) {
		for (j = 1; j <= m; j++)
			s += a[i][j];
		s = s / n;
		for (j = 1; j <= m; j++)
			if (s < a[i][j])
				x++;
		cout << "в столбце " << i << " число элементов больше срюарифю= " << x<<endl;
		x = 0;
	}
}
