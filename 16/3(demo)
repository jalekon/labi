using namespace std;
#include <iostream>
#include <cmath>

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, i, k, x, y,min,max;
	cout << "Введите N и массив" << endl;
	cin >> n;
	int* a = new int[n];
	for (i = 1; i <= n; i++) {
		cout << i << "-й элемент массива= " << endl;
		cin >> a[i];
	}
	max = a[1];
	min = a[1];
	for (i = 1; i <= n; i++) {
		if ((a[i] < min)||(a[i]=min)) {
			min = a[i];
			y = i;
		}
	}
			n = n + 1;
			i = n;
				while ((i>y)||(i=y)) {
					a[i] = a[i - 1];
					i--;
				}	
				a[y] = 0;

				
		for (i = 1; i <= (n); i++)
			cout << a[i] << "|";
}
