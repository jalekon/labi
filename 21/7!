using namespace std;

#include <string>
#include <iostream>
#include <windows.h>

int main() {
	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	int i, m, k;
	string s, t;
	cout << "Введите строку S: ";
	cin.ignore();
	getline(cin, s);
	k = 0;
	m = s.size();
	t = s;

	for (i = 0; i < m; i++)
		if (i % 2 == 0) {
			s[k] = t[i];
			k++;
		}
		
	for (i = (m - 1); i >= 0; i--)
		if (i % 2 == 1) {
			s[k] = t[i];
			k++;
		}
	cout << "Зашифрованная строка: " << s;
}
