using namespace std;
#include <iostream>
#include <cmath>

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, i, max;
	double s;
	cout << "Введите N и не повторяющаеся элементы массива" << endl;
	cin >> n;
	int* x = new int[n];
	for (i = 1; i <= n; i++) {
		cout << i << "-й элемент массива= " << endl;
		cin >> x[i];
	}
	for (n; n >1; n --)
		if ((x[n - 1] < x[n]) & (x[n] > x[n + 1])) 
			cout << n << " - локальный максимум ";
}
